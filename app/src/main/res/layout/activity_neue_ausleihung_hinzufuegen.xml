<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.fh_muenster.buecherwelt.buecherweltAndroid.NeueAusleihungHinzufuegen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BÃ¼cherwelt"
        android:id="@+id/textView100"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Neues Buch:"
        android:id="@+id/textView101"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/button102"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView101"
        android:layout_toEndOf="@+id/textView101"
        android:onClick="speichern" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText103"
        android:hint="Titel"
        android:layout_below="@+id/textView101"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/textView100"
        android:layout_toStartOf="@+id/textView100" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText104"
        android:hint="Autor"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText103"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText103"
        android:layout_alignEnd="@+id/editText103" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText105"
        android:hint="Erscheinungsjahr"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView100"
        android:layout_alignRight="@+id/button102"
        android:layout_alignEnd="@+id/button102" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText106"
        android:hint="Anzahl"
        android:layout_below="@+id/editText105"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/editText105"
        android:layout_alignEnd="@+id/editText105"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
